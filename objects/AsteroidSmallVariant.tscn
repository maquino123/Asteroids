		return
	_explosion_particles()
	explosion_pitch = 1.4
	_play_explosion_sound()
	exploded = true 
	
	emit_signal(\"explode\")
	
	emit_signal(\"score_changed\", score_value)
	_spawn_score()
	
	get_parent().remove_child(self)
	queue_free()
